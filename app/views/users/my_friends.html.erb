<h1>Friends</h1>
<div class="no-padding col-9 card-styled">
  <div class="search-area mt-o">
      <h3>Search Friends</h3>

      <%= form_tag search_friend_path, remote: true, method: :get do %>
        <div class="form-group row">
          <div class="col-9 no-right-padding">
            <%= text_field_tag :friend, params[:friend], 
                                placeholder: "Friend",
                                autofocus: true,
                                class: "form-control form-control-lg
                                styled-input" %>
          </div>
          <div class="col-3">
            <%= button_tag type: :submit, class: "btn btn-outline-success" do %>
              <%= fa_icon 'search 2x' %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

  <div id="results"></div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>